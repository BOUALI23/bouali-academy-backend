{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "instructor": {
      "type": "string",
      "default": "Bouali Zakaria",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "instructor_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "course"
    },
    "duration": {
      "type": "decimal",
      "required": true
    },
    "lessons": {
      "type": "integer",
      "required": true
    },
    "prev_price": {
      "type": "decimal"
    },
    "overview_url": {
      "type": "string"
    },
    "lesson": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "review": {
      "type": "decimal",
      "default": 4.6,
      "min": 4.5,
      "max": 4.9,
      "required": true
    }
  }
}
