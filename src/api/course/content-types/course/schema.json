{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "course-content.lecture",
        "course-content.section"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "Instructor": {
      "type": "string",
      "default": "Bouali Zakaria"
    },
    "duration": {
      "type": "integer"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "lessons": {
      "type": "integer"
    }
  }
}
