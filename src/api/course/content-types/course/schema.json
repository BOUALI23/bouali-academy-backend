{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "instructor": {
      "type": "string",
      "default": "Bouali Zakaria",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "lessons": {
      "type": "component",
      "repeatable": true,
      "component": "course.lecture"
    },
    "instructor_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    }
  }
}
